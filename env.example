# OpenAI API 配置
OPENAI_API_KEY=your_openai_api_key_here
MODEL=gpt-4o-mini
TEMPERATURE=0.3
MAX_TOKENS=2000

# GitHub 应用配置
GITHUB_APP_ID=your_github_app_id
GITHUB_PRIVATE_KEY=your_private_key_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret

# 服务器配置
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# 数据库配置
DATABASE_URL=./data/issues-bot.db

# AI 功能配置
LANGUAGE=中文
AUTO_FIX_ENABLED=true
ISSUE_ANALYSIS_ENABLED=true
MAX_AUTO_FIX_COMPLEXITY=3
CONFIDENCE_THRESHOLD=0.8

# 安全配置
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# 可选：Azure OpenAI 配置
# AZURE_API_VERSION=2023-12-01-preview
# AZURE_DEPLOYMENT=your_deployment_name
# OPENAI_API_ENDPOINT=https://your-resource.openai.azure.com

# 可选：GitHub Models 配置
# USE_GITHUB_MODELS=false
# GITHUB_TOKEN=your_github_token
